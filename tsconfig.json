{
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "outDir": "./",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "declaration": false,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }
  